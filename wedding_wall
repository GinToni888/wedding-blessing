    <div class="background"></div>
    
    <svg class="plant-deco plant-top-left" viewBox="0 0 100 100"><circle cx="50" cy="50" r="40" fill="#7d8c78" opacity="0.1"/></svg>
    <svg class="plant-deco plant-bottom-right" viewBox="0 0 100 100"><circle cx="50" cy="50" r="45" fill="#7d8c78" opacity="0.1"/></svg>

    <div id="display-container">
        <div id="card-target">
            <div class="message-card">
                <div class="sender">LOADING祝福載入中...</div>
                <div class="content">Maggie & Stanley<br>Wedding Celebration</div>
                <div class="wedding-tag">April 2026 @ Mandarin Oriental</div>
            </div>
        </div>
    </div>

    <canvas id="fx-canvas"></canvas>
    <div id="hint">測試說明：點擊「空白鍵」模擬落槌瞬間效果</div>

    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
    
    <script>
        // 模擬資料庫訊息 (零件 A 完成後會改為自動抓取)
        const mockMessages = [
            { name: "親愛的伴娘 小雅", msg: "看著 Maggie 穿上緞面魚尾婚紗，真的美得像森林裡的仙子！" },
            { name: "Stanley 的大學死黨", msg: "阿貝，要把我們心目中的女神 Maggie 照顧好喔！" },
            { name: "文華東方主廚", msg: "祝福二位新婚愉快，甜甜蜜蜜！" },
            { name: "Maggie's Colleague", msg: "Wishing you a lifetime of happiness and love." }
        ];

        let currentIndex = 0;

        function updateMessage() {
            const card = document.getElementById('card-target');
            const data = mockMessages[currentIndex];
            
            card.innerHTML = `
                <div class="message-card">
                    <div class="sender">— ${data.name} —</div>
                    <div class="content">${data.msg}</div>
                    <div class="wedding-tag">M & S Forever Love</div>
                </div>
            `;
            
            currentIndex = (currentIndex + 1) % mockMessages.length;
        }

        // 每 8 秒切換一次訊息
        setInterval(updateMessage, 8000);

        // --- 核心互動：鏡開儀式落槌效果 ---
        window.addEventListener('keydown', (e) => {
            if (e.code === 'Space') {
                triggerKagamiBiraki();
            }
        });

        function triggerKagamiBiraki() {
            // 1. 噴發金粉與奶油色花瓣效果
            var count = 200;
            var defaults = { origin: { y: 0.7 } };

            function fire(particleRatio, opts) {
                confetti(Object.assign({}, defaults, opts, {
                    particleCount: Math.floor(count * particleRatio)
                }));
            }

            fire(0.25, { spread: 26, startVelocity: 55, colors: ['#fdf5e6', '#c5a059'] });
            fire(0.2, { spread: 60, colors: ['#7d8c78', '#ffffff'] });
            fire(0.35, { spread: 100, decay: 0.91, scalar: 0.8 });
            fire(0.1, { spread: 120, startVelocity: 25, decay: 0.92, scalar: 1.2 });
            fire(0.1, { spread: 120, startVelocity: 45 });

            // 這裡可以後續加入「蝴蝶飛出」的 JS 動畫邏輯
            console.log("落槌瞬間：蝴蝶與鮮花綻放！");
        }
    </script>
</body>
