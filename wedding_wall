<body>

    <div class="background"></div>

    <svg class="leaf top-left" viewBox="0 0 200 200"><path d="M40,100 Q40,40 100,40 T160,100 Q160,160 100,160 T40,100" /><path d="M10,120 Q10,70 70,70 T130,120 Q130,170 70,170 T10,120" opacity="0.5"/></svg>
    <svg class="leaf bottom-right" viewBox="0 0 200 200"><path d="M40,100 Q40,40 100,40 T160,100 Q160,160 100,160 T40,100" /><path d="M60,140 Q60,90 120,90 T180,140 Q180,190 120,190 T60,140" opacity="0.5"/></svg>

    <div id="display-container">
        <div id="card-target">
            <div class="message-card">
                <div class="sender">Maggie & Stanley</div>
                <div class="content">請先點擊畫面任意處<br>系統將開始連線並啟動空白鍵功能</div>
                <div class="wedding-tag">April 2026 @ Mandarin Oriental</div>
            </div>
        </div>
    </div>

    <div id="status-info">等待初始化...</div>

    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>

    <script>
        // 1. 請在此填入你的 GAS URL
        const gasUrl = "你的_GAS_部署網址"; 
        
        let messages = [{ name: "Maggie & Stanley", msg: "歡迎參加我們的婚禮" }];
        let currentIndex = 0;
        let isFirstLoad = true;

        const statusInfo = document.getElementById('status-info');

        // 2. 強化抓取邏輯
        async function fetchMessages() {
            if (!gasUrl || gasUrl.includes("你的_GAS")) {
                statusInfo.innerText = "錯誤：尚未設定 GAS 網址";
                return;
            }

            try {
                statusInfo.innerText = "正在同步祝福資料...";
                const response = await fetch(gasUrl);
                const data = await response.json();
                
                if (data && data.length > 0) {
                    messages = data;
                    statusInfo.innerText = "資料更新成功，共 " + data.length + " 則祝福";
                    if (isFirstLoad) {
                        isFirstLoad = false;
                        rotateMessage(); // 抓到資料後立即更換一次畫面
                    }
                } else {
                    statusInfo.innerText = "資料庫目前為空 (請確認 D 欄是否有 ok)";
                }
            } catch (err) {
                statusInfo.innerText = "連線失敗：" + err.message;
                console.error(err);
            }
        }

        function rotateMessage() {
            const container = document.getElementById('card-target');
            const data = messages[currentIndex];
            
            container.style.opacity = 0;
            
            setTimeout(() => {
                container.innerHTML = `
                    <div class="message-card">
                        <div class="sender">— ${data.name} —</div>
                        <div class="content">${data.msg.replace(/\n/g, '<br>')}</div>
                        <div class="wedding-tag">M & S Forever Love</div>
                    </div>
                `;
                container.style.opacity = 1;
                currentIndex = (currentIndex + 1) % messages.length;
            }, 1200);
        }

        // 3. 解決空白鍵與點擊問題
        document.addEventListener('click', () => {
            window.focus(); // 確保視窗取得焦點
            statusInfo.innerText = "視窗已取得焦點，空白鍵已就緒";
        });

        document.addEventListener('keydown', (e) => {
            if (e.code === 'Space' || e.keyCode === 32) {
                e.preventDefault();
                triggerKagamiBiraki();
            }
        });

        function triggerKagamiBiraki() {
            confetti({
                particleCount: 150,
                spread: 70,
                origin: { y: 0.6 },
                colors: ['#fdf5e6', '#8da086', '#c5a059', '#ffffff'],
                ticks: 300
            });
        }

        // 定時任務
        fetchMessages();
        setInterval(fetchMessages, 20000); // 20秒抓一次資料
        setInterval(rotateMessage, 8000);   // 8秒換一則
    </script>
</body>
</html>
