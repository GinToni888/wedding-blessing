<body onclick="this.focus();"> <div class="background"></div>

    <svg class="leaf top-left" viewBox="0 0 200 200">
        <path d="M100,20 C120,50 180,60 180,100 C180,140 120,150 100,180 C80,150 20,140 20,100 C20,60 80,50 100,20" />
    </svg>
    <svg class="leaf bottom-right" viewBox="0 0 200 200">
        <path d="M100,20 C120,50 180,60 180,100 C180,140 120,150 100,180 C80,150 20,140 20,100 C20,60 80,50 100,20" />
    </svg>

    <div id="display-container">
        <div id="card-target">
            <div class="message-card">
                <div class="sender">Maggie & Stanley</div>
                <div class="content">祝福載入中...</div>
                <div class="wedding-tag">Mandarin Oriental Taipei</div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>

    <script>
        const gasUrl = "你的_GAS_網頁應用程式網址"; // 貼上零件 A 的網址
        let messages = [{ name: "Maggie & Stanley", msg: "歡迎參加我們的婚禮" }];
        let currentIndex = 0;

        // 每 10 秒向 Google Sheet 更新一次資料
        async function fetchMessages() {
            try {
                const response = await fetch(gasUrl);
                const data = await response.json();
                if (data && data.length > 0) {
                    messages = data;
                }
            } catch (err) {
                console.error("無法讀取資料", err);
            }
        }

        function rotateMessage() {
            const container = document.getElementById('card-target');
            const data = messages[currentIndex];
            
            container.style.opacity = 0;
            
            setTimeout(() => {
                container.innerHTML = `
                    <div class="message-card">
                        <div class="sender">— ${data.name} —</div>
                        <div class="content">${data.msg.replace(/\n/g, '<br>')}</div>
                        <div class="wedding-tag">Love in April 2026</div>
                    </div>
                `;
                container.style.opacity = 1;
                currentIndex = (currentIndex + 1) % messages.length;
            }, 1000);
        }

        // 初始化
        fetchMessages();
        setInterval(fetchMessages, 20000); // 每 20 秒背景更新一次資料庫
        setInterval(rotateMessage, 8000);   // 每 8 秒切換一則顯示

        // 空白鍵監聽 (確保先點擊一下網頁)
        window.addEventListener('keydown', (e) => {
            if (e.code === 'Space') {
                e.preventDefault();
                triggerKagamiBiraki();
            }
        });

        function triggerKagamiBiraki() {
            confetti({
                particleCount: 150,
                spread: 70,
                origin: { y: 0.6 },
                colors: ['#fdf5e6', '#8da086', '#c5a059', '#ffffff']
            });
        }
    </script>
</body>
